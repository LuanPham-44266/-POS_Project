<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#E653BD">

    <!-- Nút đổi mật khẩu ở góc trên bên phải -->
    <Button
        android:id="@+id/btnChangePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đổi mật khẩu"
        android:textSize="12sp"
        android:padding="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#3A1F5D"
        android:textColor="#FFFFFF" />

    <!-- Tiêu đề ứng dụng -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="POS Trà Sữa"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp" />

    <!-- Layout chứa các nút chính ở giữa màn hình -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center">

        <Button
            android:id="@+id/btnMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn món"
            android:textSize="20sp"
            android:padding="16dp"
            android:backgroundTint="#7B2CBF"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giỏ hàng"
            android:textSize="20sp"
            android:padding="16dp"
            android:backgroundTint="#7B2CBF"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnOrderHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lịch sử đơn hàng"
            android:textSize="20sp"
            android:padding="16dp"
            android:backgroundTint="#7B2CBF"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <!-- Layout chứa các nút quản lý ở dưới cùng -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnAddItem"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Thêm món"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#3A1F5D"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnUpdateItem"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Cập nhật món"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#3A1F5D"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnDeleteItem"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Xóa món"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginStart="4dp"
            android:backgroundTint="#3A1F5D"
            android:textColor="@android:color/white" />
    </LinearLayout>

</RelativeLayout>
